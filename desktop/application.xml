<?xml version="1.0" encoding="utf-8" ?>
<application 
	xmlns="http://ns.adobe.com/air/application/3.7"
	minimumPatchLevel="0">

  <id>@appId@</id>

  <name>
    <text xml:lang="en">@appName@</text>
  </name>

  <versionNumber>@versionNumber@</versionNumber>

  <filename>@appFilename@</filename>

  <description>
    <text xml:lang="en">This is an example AIR application.</text>
  </description>

  <copyright>Copyright 2013, David Turner</copyright>

  <supportedProfiles>desktop</supportedProfiles>

  <icon>
    <image16x16>icons/AIRApp_16.png</image16x16>
    <image32x32>icons/AIRApp_32.png</image32x32>
    <image48x48>icons/AIRApp_48.png</image48x48>
    <image128x128>icons/AIRApp_128.png</image128x128>
  </icon>

  <initialWindow>
    <content>Main.swf</content>
    <title>@appName@ @versionNumber@</title>
    <minimizable>true</minimizable>
    <maximizable>false</maximizable>
    <resizable>false</resizable>
    <fullScreen>false</fullScreen>
    <width>320</width>
    <height>480</height>
    <visible>false</visible>
    <systemChrome>standard</systemChrome> <!-- standard or none -->
    <transparent>false</transparent>
    <renderMode>direct</renderMode> 
    <!-- The following affects retina mac books only. -->
    <requestedDisplayResolution>high</requestedDisplayResolution>  
  </initialWindow>

</application>

