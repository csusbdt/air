<?xml version="1.0" encoding="utf-8" ?>
<application 
	xmlns="http://ns.adobe.com/air/application/3.7"
	minimumPatchLevel="0">

  <supportedProfiles>desktop</supportedProfiles>

  <versionNumber>1.0.0</versionNumber>
  <versionLabel>v1</versionLabel>
  <allowBrowserInvocation>false</allowBrowserInvocation>

  <id>app.Hello</id>

  <installFolder>HelloAIR</installFolder>

  <!-- 
      Note: Icon files must be included in the application package; icons referenced 
            in the application descriptor document are not included automatically. 
  -->
