  <name>
    <text xml:lang="en">Hello AIR</text>
  </name>

  <filename>Hello AIR</filename>

  <description>
    <text xml:lang="en">Hello Adobe AIR application.</text>
  </description>

  <copyright>Copyright 2013, David Turner</copyright>

  <programMenuFolder>Hello AIR</programMenuFolder>

  <customUpdateUI>false</customUpdateUI>

  <initialWindow>
    <content>Main.swf</content>
    <title>Hello Application</title>
    <minimizable>true</minimizable>
    <maximizable>true</maximizable>
    <resizable>true</resizable>
    <fullscreen>false</fullscreen>
    <width>500</width>
    <height>500</height>
    <x>150</x>
    <y>150</y>
    <minSize>300 300</minSize>
    <maxSize>800 800</maxSize>
    <visible>true</visible>
    <systemChrome>standard</systemChrome>
    <transparent>false</transparent>
    <renderMode>direct</renderMode>
  </initialWindow>

</application>
