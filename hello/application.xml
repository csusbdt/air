<?xml version="1.0" encoding="utf-8" ?>
<application 
	xmlns="http://ns.adobe.com/air/application/3.7"
	minimumPatchLevel="0">

  <!--
    AIR application descriptor elements:
    http://help.adobe.com/en_US/air/build/WSfffb011ac560372f2fea1812938a6e463-8000.html
  -->

  <!-- application identity -->
  <id>csusbdt.Hello</id>
  <name>
    <text xml:lang="en">Hello AIR</text>
  </name>
  <filename>Hello AIR</filename>

  <!-- application version -->
  <versionNumber>1.0.0</versionNumber>
  <versionLabel>ver 1.0.0</versionLabel> <!-- optional -->

  <supportedProfiles>desktop</supportedProfiles>

  <allowBrowserInvocation>false</allowBrowserInvocation>


  <installFolder>HelloAIR</installFolder>

  <!-- 
      Note: Icon files must be included in the application package; icons referenced 
            in the application descriptor document are not included automatically. 
  -->
<!--
  <icon>
    <image16x16>icons/AIRApp_16.png</image16x16>
    <image32x32>icons/AIRApp_32.png</image32x32>
    <image48x48>icons/AIRApp_48.png</image48x48>
    <image128x128>icons/AIRApp_128.png</image128x128>
  </icon>
-->



  <description>
    <text xml:lang="en">Hello Adobe AIR application.</text>
  </description>

  <copyright>Copyright 2013, David Turner</copyright>

  <programMenuFolder>Hello AIR</programMenuFolder>

  <customUpdateUI>false</customUpdateUI>

  <initialWindow>
    <content>Main.swf</content>
    <title>Hello AIR</title>
    <minimizable>true</minimizable>
    <maximizable>true</maximizable>
    <resizable>false</resizable>
    <fullScreen>false</fullScreen>
    <width>500</width>
    <height>500</height>
    <x>150</x>
    <y>150</y>
    <minSize>300 300</minSize>
    <maxSize>800 800</maxSize>
    <visible>true</visible> <!-- how app can make itelf visible after init? -->
    <systemChrome>standard</systemChrome>
    <transparent>false</transparent>
    <renderMode>auto</renderMode>  <!-- not sure what is optimal here: auto, cpu, direct, or gpu -->
    <requestedDisplayResolution>high</requestedDisplayResolution>  <!-- affects retina mac books only -->
  </initialWindow>

</application>
