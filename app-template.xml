<?xml version="1.0" encoding="utf-8" ?>
<application 
	xmlns="http://ns.adobe.com/air/application/3.7"
	minimumPatchLevel="0">

  <id>com.herokuapp.csusbdt-air.desktop</id>

  <name>
    <text xml:lang="en">Hello Desktop AIR</text>
  </name>

  <filename>HelloDesktopAIR</filename>

  <versionNumber>1.0.3</versionNumber>
  <versionLabel>ver 1.0.3</versionLabel> <!-- optional -->

  <description>
    <text xml:lang="en">This is an example AIR application for desktop computers.</text>
  </description>

  <copyright>Copyright 2013, David Turner</copyright>

  <supportedProfiles>@supportedProfiles@</supportedProfiles>

  <programMenuFolder>Hello AIR</programMenuFolder> <!-- I think for windows only -->

  <allowBrowserInvocation>false</allowBrowserInvocation> 

  <!--installFolder>HelloDesktopAIR</installFolder-->

  <icon>
    <image16x16>icons/AIRApp_16.png</image16x16>
    <image32x32>icons/AIRApp_32.png</image32x32>
    <image48x48>icons/AIRApp_48.png</image48x48>
    <image128x128>icons/AIRApp_128.png</image128x128>
  </icon>

  <customUpdateUI>true</customUpdateUI>

  <initialWindow>
    <content>Main.swf</content>
    <title>Hello AIR</title>
    <minimizable>true</minimizable>
    <maximizable>true</maximizable>
    <resizable>true</resizable>
    <fullScreen>false</fullScreen>
    <width>500</width>
    <height>500</height>
    <x>150</x>
    <y>150</y>
    <minSize>500 500</minSize>
    <maxSize>800 800</maxSize>
    <visible>true</visible> <!-- How can the app make itelf visible after init? -->
    <systemChrome>standard</systemChrome> <!-- standard, none, ? -->
    <transparent>false</transparent>
    <renderMode>auto</renderMode>  <!-- not sure what is optimal here: auto, cpu, direct, or gpu? -->
    <requestedDisplayResolution>high</requestedDisplayResolution>  <!-- affects retina mac books only -->
  </initialWindow>

</application>
